{
  "compilerOptions": {
    "sourceMap": true,
    "incremental": true,
    "pretty": true,
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "jsx",
    "lib": [
      "dom",
      "scripthost",
      "esnext"
    ],
  },
  "include": [
    "src",
    "gatsby-*.ts",
  ],
  "exclude": [
    "node_modules",
    "*.test.ts"
  ],
}
